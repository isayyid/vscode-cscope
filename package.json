{
    "name": "cscope",
    "displayName": "cscope",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
        ],
        "views": {
            "explorer": [
                {
                    "id": "cscope-hierarchy",
                    "name": "Cscope Hierarchy"
                }
            ]
        },
        "configuration": [
            {
                "title": "Cscope",
                "properties": {
                    "cscope.database": {
                        "type": "string",
                        "default": "cscope.out",
                        "description": "Name of database"
                    },
                    "cscope.path": {
                        "type": "string",
                        "default": "",
                        "description": "Relative path to the cscope dir"
                    }
                }
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.1.4",
        "vscode": "^1.1.25",
        "eslint": "^4.11.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
